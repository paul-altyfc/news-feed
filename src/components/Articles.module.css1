.container {
  grid-area: content;
}

.list {
  display: grid;
  grid-gap: 10px;
  list-style-type: none;
  grid-column-start: 1;
  grid-column: span 1;
  grid-row-start: 1;
  grid-row: span 4;
}

.listitem {
  display: grid;
  list-style-type: none;
  grid-template-rows: auto;
  border: 2px solid;
  background: aliceblue;
}
